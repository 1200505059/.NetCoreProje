@model EntityLayer.Concrate.About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<h1 style="color:white;">Hakkımda Düzenleme Paneli</h1>

@using (Html.BeginForm("Index", "About", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.AboutID)
    <br />
    <br />
    <br />
    <label>Başlık</label>
    @Html.TextBoxFor(x=>x.Title ,new{@class="form-control"})
    <br />
    <label>Yaş</label>
    @Html.TextBoxFor(x=>x.Age ,new{@class="form-control"})
    <br />
    <label>Mail</label>
    @Html.TextBoxFor(x=>x.Mail ,new{@class="form-control"})
    <br />
    <label>Telefon</label>
    @Html.TextBoxFor(x=>x.Phone ,new{@class="form-control"})
    <br />
    <label>Adres</label>
    @Html.TextBoxFor(x=>x.Address ,new{@class="form-control"})
    <br />
    <label>Resim</label>
    @Html.TextBoxFor(x=>x.ImageUrl ,new{@class="form-control"})
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x=>x.Description,new{@class="form-control"})
    <br />
    <button class="btn btn-primary">Kaydet</button>
    <br />

}


