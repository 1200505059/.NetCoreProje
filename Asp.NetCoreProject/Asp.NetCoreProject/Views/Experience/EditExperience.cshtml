@model EntityLayer.Concrate.Experience
@{
    ViewData["Title"] = "EditExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<h1 style="color:white;">Deneyim Düzenleme Paneli</h1>
@using (Html.BeginForm("EditExperience", "Experience", FormMethod.Post))
{
   @Html.HiddenFor(x=> x.ExperienceID)
    <br />
    <br />
    @Html.Label("Deneyim Başlığı")
    @Html.TextBoxFor(x=>x.ExperienceName,new{@class="form-control"})
    <br />
    <label>Tarih </label>
    @Html.TextBoxFor(x=>x.Date,new{@class="form-control"})
    <br />
    <label>Resim </label>
    @Html.TextBoxFor(x=>x.ImageUrl,new{@class="form-control"})
    <br />
    <label>Açıklama </label>
    @Html.TextAreaFor(x=>x.Description,10,3,new{@class="form-control"})
    <br />
    <button class="btn btn-primary">Güncelle</button>
    <br />

}


